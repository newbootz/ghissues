#!/usr/bin/env ruby -w

require 'ostruct'
require 'optparse'

require File.expand_path(File.join(File.dirname(__FILE__), %w[.. lib ghissues]))

options = OpenStruct.new

def help
  puts "Usage: 

   ghissues open 
      Lists open issues

  ghissues create 
     Creates a new issue. You get prompted for the title and details "
end



(help; exit) if ARGV.empty?

